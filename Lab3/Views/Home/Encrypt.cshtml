                    <input class="mdl-cell mdl-cell--4-col mdl-button mdl-js-button mdl-button--primary" asp-for="File" type="file" />
                    
                    <button type="submit" class="mdl-cell mdl-cell--4-col mdl-button mdl-js-button mdl-button--accent">Расшифровать</button>
                </section>
            </form>
        }
    }

